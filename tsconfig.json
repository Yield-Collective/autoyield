{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "rootDir": "."
  },
  "baseUrl": ".",
  "paths": {
    "*": ["types/*.d.ts"]
  },
  "include": ["./*.ts", "./**/*.ts"],
  "exclude": ["node_modules"]
}
